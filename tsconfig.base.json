{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@reference-ui/core": ["packages/reference-core/src/index.ts"],
      "@reference-ui/core/react": ["packages/reference-core/src/react.ts"],
      "@reference-ui/reference-storybook": [
        "packages/reference-storybook/src/index.ts"
      ],
      "@reference-ui/system": ["packages/reference-system/src/index.ts"],
      "@reference-ui/reference-cli": ["packages/reference-cli/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
