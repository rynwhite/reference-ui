{
  "name": "@reference-ui/cli",
  "version": "0.0.1",
  "description": "Reference UI CLI",
  "type": "module",
  "bin": {
    "reference": "./dist/index.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "pnpm run build && node dist/index.mjs",
    "watch": "tsdown --watch",
    "test": "vitest run",
    "ci": "node scripts/ci.mjs",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@pandacss/dev": "^0.45.0",
    "@reference-ui/system": "workspace:*",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "20.19.9",
    "tsdown": "^0.20.1",
    "typescript": "~5.9.2",
    "vitest": "^2.0.0"
  },
  "license": "MIT"
}
