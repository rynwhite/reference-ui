{
  "name": "@reference-ui/cli",
  "version": "0.0.1",
  "private": true,
  "description": "Reference CLI - invokes compiler, materializes output to disk",
  "type": "module",
  "bin": {
    "ref": "./dist/index.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch"
  },
  "dependencies": {
    "@reference-ui/gen": "workspace:*"
  },
  "devDependencies": {
    "tsdown": "^0.20.1",
    "typescript": "~5.9.2"
  }
}
