{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": null,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "lib": ["es2020", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "importHelpers": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
