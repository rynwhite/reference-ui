{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": null,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "importHelpers": false,
    "baseUrl": ".",
    "paths": {
      "@reference-ui/core": ["./src/entry/index.ts"],
      "@reference-ui/core/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
