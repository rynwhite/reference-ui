{
  "name": "@reference-ui/core",
  "version": "0.0.1",
  "description": "Reference design system - ships as source, builds on user install via ref-sync",
  "type": "module",
  "main": "./src/entry/index.ts",
  "types": "./src/entry/index.ts",
  "bin": {
    "ref": "./dist/cli/index.mjs",
    "ref-sync": "./dist/cli/index.mjs"
  },
  "exports": {
    ".": "./src/entry/index.ts",
    "./tokens": "./src/tokens/index.ts",
    "./panda-config": "./src/tokens/index.ts",
    "./styled-system/css": "./src/system/css/index.js",
    "./styled-system/styles.css": "./src/system/styles.css",
    "./styles.css": "./src/system/styles.css"
  },
  "dependencies": {
    "lit": "^3.2.0",
    "@pandacss/dev": "^1.8.1",
    "tsdown": "^0.20.1",
    "@types/node": "^25.1.0"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "dev:core": "concurrently \"panda codegen --watch\" \"panda --watch\"",
    "gen": "panda codegen && panda",
    "codegen": "panda codegen",
    "cssgen": "panda",
    "postinstall": "npm run build && node ./dist/cli/index.mjs link-system"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "~5.9.3"
  }
}
