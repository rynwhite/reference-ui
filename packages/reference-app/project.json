{
  "name": "@reference-ui/reference-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/reference-app/src",
  "projectType": "application",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm dev",
        "cwd": "packages/reference-app"
      },
      "dependsOn": ["reference-cli:build"]
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm build",
        "cwd": "packages/reference-app"
      },
      "dependsOn": ["reference-cli:build"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm preview",
        "cwd": "packages/reference-app"
      }
    }
  },
  "tags": []
}
