{
  "name": "@reference-ui/workspace",
  "version": "0.0.1",
  "private": true,
  "description": "Reference UI - Knowledge-first UI.",
  "scripts": {
    "dev": "nx run-many --target=dev --projects=reference-core,reference-storybook --parallel=2",
