    "@storybook/react-vite": "^8.6.15",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "20.19.9",
    "nx": "22.4.2",
    "prettier": "~3.6.2",
    "storybook": "^8.6.15",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
